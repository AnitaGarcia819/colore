<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.csumb.colore.colore.Level"
    tools:showIn="@layout/activity_level">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level: 1"
        android:id="@+id/level_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START!"
        android:id="@+id/start_button"
        android:layout_gravity="bottom"
        android:layout_below="@+id/command_button_7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#f927fa3c"
        android:capitalize="words"
        android:clickable="true"
        android:onClick="startGame"
         />


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/command_button_1"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/level_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/command_button_2"
        android:layout_below="@+id/command_button_1"
        android:layout_alignLeft="@+id/command_button_1"
        android:layout_alignStart="@+id/command_button_1" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/command_button_3"
        android:layout_below="@+id/command_button_2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/command_button_4"
        android:layout_below="@+id/command_button_3"
        android:layout_alignLeft="@+id/command_button_3"
        android:layout_alignStart="@+id/command_button_3"
        android:visibility="invisible" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/command_button_5"
        android:layout_below="@+id/command_button_4"
        android:layout_alignLeft="@+id/command_button_4"
        android:layout_alignStart="@+id/command_button_4"
        android:visibility="invisible" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/command_button_6"
        android:layout_below="@+id/command_button_5"
        android:layout_alignLeft="@+id/command_button_5"
        android:layout_alignStart="@+id/command_button_5"
        android:visibility="invisible" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/command_button_0"
        android:layout_below="@+id/level_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/command_button_7"
        android:layout_below="@+id/command_button_6"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/command_button_8"
        android:layout_alignTop="@+id/start_button"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

</RelativeLayout>
